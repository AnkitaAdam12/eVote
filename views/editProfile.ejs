    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>

    <title>.e-Vote : Your Voice Matters</title> 
</head>
<body>
    <header class="header_section">
        <a class="navbar-brand" href="editProfile">
            <span>
            .e-Vote 
            </span>
        </a>
      </header>
      <!-- end header section -->

<div class="container">
    <div class="main-body">
    
         
          <!-- <% if (users !=null) { %> -->
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body1">
                  <div class="d-flex flex-column align-items-center text-center">
                    <%  var dataUrl="data:image/jpeg;base64,"+btoa(users.photo); %>
                    <img src=<%= dataUrl %> alt="photo" class="rounded-circle" width="170">
                    <div class="mt-3" id="imgPlace">
                      <h4><%= users.name %></h4>
                      <p class="text-secondary mb-1">VoterId : <%= users.voterid %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

             
              <div class="col-lg-8" >
                <div class="card" id="infoPlace">
                    <div class="card-body">
                      <form action="/updateProfile" method="post" id="ve">
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" name="name" class="form-control" id="name" maxsize="100" value="<%= users.name %>">
                                <small class="small">Error message</small>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Age</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" name="age" class="form-control" id="age"  value=<%= users.age %>>
                                <small class="small">Error message</small>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Mobile number</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" name="phno" class="form-control" id="phno" value=<%= users.phone_no %>>
                                <small class="small">Error message</small>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Aadhar number</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" readonly class="form-control" id="aadhar" value=<%= users.aadharno %>>
                                <small class="small">Error message</small>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">E-mail</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" name="email" class="form-control" id="email"  value= <%= users.email %>>
                                <small class="small">Error message</small>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-9 text-secondary">
                                <input type="button" id="sub" class="btn btn-primary px-4" onclick="submitForm()" value="Save Changes">
                            </div>
                        </div>
                      </form>

                    </div>
                </div>

              </div>
             <!-- </form> -->
            </div>
          </div>
          <!-- <% }%> -->
        </div>
    </div>
    <!-- <% if (msg == 'Profile Successfully Updated') { %> -->
      <div id="myModal" class="modal1" >
        <!-- Modal content -->
        <div class="modal-content">
          <span class="close1" id="close1">&times;</span>
          <p class="msg"><%= msg %><br><br>
            <a href="/voterDashboard"><input type="button" value="OK" class="ok" id="ok" name="ok"></a></p>
        </div>
      </div>
        <!-- <% } else {%> -->
          <div id="myModal" class="modal" >
            <!-- Modal content -->
            <div class="modal-content">
              <span class="close1" id="close1">&times;</span>
              <p class="msg"><br><br>
              <a href="/VoterLogin"><input type="button" value="OK" id="ok" name="ok"></a></p>
              <!-- <button id="ok" name="ok" onclick="location.href='Partylogin'">OK</button> -->
            </div>
          </div>
          <!-- <% } %> -->
</body>
<script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
